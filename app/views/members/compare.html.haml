- content_for :title do
  Compare
  = @member1.full_name
  with
  = @member2.full_name

= render "member_page_header", member: @member1
= render "member_page_header", member: @member2

-# - member.person.policy_person_distances.published.each do |d|

%table.table
  %thead
    %tr
      %th Policy
      %th
        How much
        = @member1.name_without_title
        agrees
      %th
        How much
        = @member2.name_without_title
        agrees
      %th
        Difference
  %tbody
    - @member1.person.policy_person_distances.published.each do |ppd|
      %tr
        %td= capitalise_initial_character(ppd.policy.name)
        - fraction1 = ppd.agreement_fraction
        - fraction2 = ppd.policy.policy_person_distances.find_by(person_id: @member2.person.id).agreement_fraction
        %td= fraction_to_percentage_display(fraction1)
        %td= fraction_to_percentage_display(fraction2)
        %td= fraction_to_percentage_display((fraction1 - fraction2).abs)
