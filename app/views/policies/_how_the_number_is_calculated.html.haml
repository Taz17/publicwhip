%section.page-section#ratioexpl
  %h2
    How
    "#{policy_agreement_summary_short(policy_person_distance)}"
    is worked out

  - if policy_person_distance.category(current_user) == :never
    = render "policies/how_the_number_is_calculated_never", policy_person_distance: policy_person_distance
  - elsif policy_person_distance.category(current_user) == :not_enough
    = render "policies/how_the_number_is_calculated_not_enough", policy_person_distance: policy_person_distance
  - else
    = render "policies/how_the_number_is_calculated_other", policy_person_distance: policy_person_distance
