-# Only show this stuff if we actually have an edit history
- if @policy.most_recent_version
  - content_for :history_notice do
    = render 'layouts/history_notice', policy: @policy

= render 'page_header', policy: @policy

- if @policy.divisions.count > 0
  %p.lead
    = link_to pluralize(@policy.divisions.count, "relevant division"), {anchor: 'divisions'}, title: 'Skip to Relevant Divisions for this policy.'

  %section.page-section#members
    .policy-comparisions
      = render 'policy_comparisons_block', policy: @policy, title: 'Voted very strongly for', distances: @policy.policy_person_distances.currently_in_parliament.very_strongly_for
      = render 'policy_comparisons_block', policy: @policy, title: 'Voted strongly for', distances: @policy.policy_person_distances.currently_in_parliament.strongly_for
      = render 'policy_comparisons_block', policy: @policy, title: 'Voted moderately for', distances: @policy.policy_person_distances.currently_in_parliament.moderately_for
      = render 'policy_comparisons_block', policy: @policy, title: 'Voted a mixture of for and against', distances: @policy.policy_person_distances.currently_in_parliament.for_and_against
      = render 'policy_comparisons_block', policy: @policy, title: 'Voted moderately against', distances: @policy.policy_person_distances.currently_in_parliament.moderately_against
      = render 'policy_comparisons_block', policy: @policy, title: 'Voted strongly against', distances: @policy.policy_person_distances.currently_in_parliament.strongly_against
      = render 'policy_comparisons_block', policy: @policy, title: 'Voted very strongly against', distances: @policy.policy_person_distances.currently_in_parliament.very_strongly_against
      = render 'policy_comparisons_block', policy: @policy, title: 'Never voted on', distances: @policy.policy_person_distances.currently_in_parliament.never_voted

  %section.page-section#divisions
    %h2 Relevant divisions
    = render 'vote_table_leader', policy: @policy
    = render 'vote_summary_table', member: @member, policy: @policy
    %p.alert.alert-postnote.small
      If you know of other
      = link_to 'divisions', divisions_path
      that relate to this policy, you can add them in the
      %strong Votes
      section of that divisionâ€˜s page.
- else
  %p This policy isn't connected with any divisions just yet.
  = render 'division_edit_instructions'
